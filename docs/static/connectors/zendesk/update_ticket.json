  "input_parameters": [
    {
      "type": "integer",
      "name": "ticket_id",
      "description": "Enter ticket ID",
      "title": "Ticket ID",
      "is_required": true
    },
    {
      "type": "string",
      "name": "requester_email",
      "description": "Enter text",
      "title": "New requester email",
      "is_required": false,
      "format": "email",
      "default": ""
    },
    {
      "type": "integer",
      "name": "assignee_id",
      "title": "New assignee",
      "is_required": false,
      "hint": "Use to assign to a specific agent",
      "dynamic_options": {
        "function": "#/functions/search_users",
        "inputs": {
          "user": {
            "value": "{{client.query}}"
          },
          "zendesk_access_token": {
            "value": "{{input_parameters.zendesk_access_token}}"
          }
        },
        "options": {
          "target_array": {
            "type": "object",
            "value": "{{output_parameters.zendesk_users}}"
          },
          "value_path": "id",
          "label_path": "name"
        }
      }
    },
    {
      "type": "integer",
      "name": "group_id",
      "title": "New group",
      "is_required": false,
      "hint": "Use to pass to a group of agents unassigned",
      "dynamic_options": {
        "function": "#/functions/get_assignable_groups",
        "inputs": {
          "zendesk_access_token": {
            "value": "{{input_parameters.zendesk_access_token}}"
          }
        },
        "options": {
          "target_array": {
            "type": "object",
            "value": "{{output_parameters.zendesk_groups}}"
          },
          "value_path": "id",
          "label_path": "name"
        }
      }
    },
