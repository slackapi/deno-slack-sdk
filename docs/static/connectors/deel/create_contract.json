      "enum": [
        "REGULAR",
        "WITHIN_MONTH"
      ]
    },
    {
      "type": "number",
      "name": "payment_due_days",
      "description": "Enter payment due days between 0-90",
      "title": "Payment due days",
      "is_required": true,
      "maximum": 90,
      "minimum": 0
    },
    {
      "type": "string",
      "name": "scale",
      "description": "Select the scale at which the amount is paid.",
      "title": "Scale of the invoice cycle",
      "is_required": false,
      "hint": "This field can be excluded when creating a Pay-as-you-go task-based or Milestone contracts.",
      "enum": [
        "hourly",
        "weekly",
        "monthly",
        "biweekly",
        "semimonthly",
        "calendar-month"
      ],
      "choices": [
        {
          "title": "Hourly",
          "value": "hourly"
        },
        {
          "title": "Weekly",
          "value": "weekly"
        },
        {
          "title": "Biweekly",
          "value": "biweekly"
        },
        {
          "title": "Semimonthly",
          "value": "semimonthly"
        },
        {
          "title": "Monthly",
