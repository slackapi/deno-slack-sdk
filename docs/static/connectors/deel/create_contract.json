{
  "id": "Fn0627DY8XJ9",
  "callback_id": "create_contract",
  "title": "Create a new contract",
  "description": "",
  "type": "app",
  "input_parameters": [
    {
      "type": "slack#/types/credential/oauth2",
      "name": "deel_access_token",
      "description": "Deel Credentials to use",
      "title": "Deel Access Token",
      "is_required": true,
      "oauth2_provider_key": "deel",
      "require_end_user_auth": true
    },
    {
      "type": "string",
      "name": "title",
      "description": "Enter the title of the contract",
      "title": "Title",
      "is_required": true
    },
    {
      "type": "string",
      "name": "legal_entity_id",
      "description": "Select the legal entity",
      "title": "Legal Entity",
      "is_required": true,
      "dynamic_options": {
        "function": "#/functions/list_legal_entities",
        "inputs": {
          "deel_access_token": {
            "value": "{{input_parameters.deel_access_token}}"
          }
        },
        "options": {
          "target_array": {
            "type": "object",
            "value": "{{output_parameters.legal_entities}}"
          },
          "value_path": "id",
          "label_path": "name"
        }
      }
    },
    {
      "type": "string",
      "name": "team_id",
      "description": "Select the team",
      "title": "Team",
      "is_required": true,
      "dynamic_options": {
        "function": "#/functions/list_teams",
        "inputs": {
          "deel_access_token": {
            "value": "{{input_parameters.deel_access_token}}"
          }
        },
        "options": {
          "target_array": {
            "type": "object",
            "value": "{{output_parameters.teams}}"
          },
          "value_path": "id",
          "label_path": "name"
        }
      }
    },
    {
      "type": "string",
      "name": "job_title",
      "description": "Enter the job title",
      "title": "Job title",
      "is_required": true
    },
    {
      "type": "boolean",
      "name": "documents_required",
      "title": "Are documents required?",
      "is_required": true,
      "hint": "Require the contractor to upload necessary compliance documents as per their country's labor laws."
    },
    {
      "type": "string",
      "name": "contract_type",
      "description": "Select contract type",
      "title": "Contract type",
      "is_required": true,
      "enum": [
        "pay_as_you_go_time_based",
        "payg_tasks",
        "payg_milestones",
        "ongoing_time_based"
      ],
      "choices": [
        {
          "title": "Pay as you go time based",
          "value": "pay_as_you_go_time_based"
        },
        {
          "title": "Pay as go task based",
          "value": "payg_tasks"
        },
        {
          "title": "Pay as go milestone based",
          "value": "payg_milestones"
        },
        {
          "title": "Ongoing time based",
          "value": "ongoing_time_based"
        }
      ]
    },
    {
      "type": "slack#/types/date",
      "name": "start_date",
      "description": "Enter Start Date",
      "title": "Start Date",
      "is_required": true
    },
    {
      "type": "number",
      "name": "amount",
      "description": "Enter the amount to be paid",
      "title": "Amount",
      "is_required": false,
      "hint": "This field can be excluded when creating a Pay-as-you-go task-based or Milestone contracts."
    },
    {
      "type": "string",
      "name": "currency_code",
      "description": "Select the currency",
      "title": "Currency",
      "is_required": true,
      "dynamic_options": {
        "function": "#/functions/list_currencies",
        "inputs": {
          "deel_access_token": {
            "value": "{{input_parameters.deel_access_token}}"
          }
        },
        "options": {
          "target_array": {
            "type": "object",
            "value": "{{output_parameters.currencies}}"
          },
          "value_path": "code",
          "label_path": "name"
        }
      }
    },
    {
      "type": "string",
      "name": "frequency",
      "title": "Scale of the invoice cycle",
      "is_required": true,
      "enum": [
        "weekly",
        "monthly",
        "biweekly",
        "semimonthly",
        "calendar-month"
      ],
      "choices": [
        {
          "title": "Weekly",
          "value": "weekly"
        },
        {
          "title": "Biweekly",
          "value": "biweekly"
        },
        {
          "title": "Semimonthly",
          "value": "semimonthly"
        },
        {
          "title": "Monthly",
          "value": "monthly"
        },
        {
          "title": "Calender month",
          "value": "calendar-month"
        }
      ]
